{
  "name": "twcnc",
  "version": "1.0.0",
  "description": "A tiny utility for constructing 'className' for Tailwind CSS.",
  "main": "lib/twcnc.js",
  "types": "lib/twcnc.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "build": "npm run build:js && npm run build:types && npm run format:lib",
    "build:js": "babel src --out-dir lib --extensions .ts",
    "build:types": "tsc --emitDeclarationOnly",
    "format": "npm run format:src && npm run format:lib",
    "format:src": "prettier --write src/**/*.{js,ts}",
    "format:lib": "prettier --write lib/**/*.{js,ts}",
    "lint": "eslint --fix src/**/*.{js,ts}",
    "bench": "npm run build && npm run bench:only",
    "bench:only": "babel-node -x .ts -- bench"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiranmurmu/twcnc.git"
  },
  "keywords": [
    "twcnc"
  ],
  "author": "Kiran Murmu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiranmurmu/twcnc/issues"
  },
  "homepage": "https://github.com/kiranmurmu/twcnc#readme",
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/benchmark": "^2.1.1",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-jest": "^27.4.6",
    "benchmark": "^2.1.4",
    "eslint": "^8.7.0",
    "jest-cli": "^27.4.7",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
}
